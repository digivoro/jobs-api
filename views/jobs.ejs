<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.js"></script>
    <!-- Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <!-- Site CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <h2>Empleos</h2>
      <div class="row">
        <form id="search-form" class="col s12 z-depth-2">
          <div class="input-field col s5">
            <input placeholder="" id="description" type="text" class="validate" value="Javascript" />
            <label for="description">Descripción</label>
          </div>
          <div class="input-field col s5">
            <input placeholder="" id="location" type="text" class="validate" value="NY" />
            <label for="location">Ubicación</label>
          </div>
          <div class="input-field col s2">
            <button class="btn waves-effect waves-light" type="submit">
              Enviar
            </button>
          </div>
        </form>
      </div>
      <div class="row">
        <table id="job-list">
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Company</th>
            <th>Location</th>
            <th>Description</th>
          </tr>
        </table>
      </div>
    </div>

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <!-- Axios CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
    <!-- Materialize JS CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Site script -->
    <script type="module" src="/actions/jobs.js"></script>
  </body>
</html>
